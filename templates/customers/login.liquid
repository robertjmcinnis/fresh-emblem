<div class="container customer_tp">
  {%-include 'breadcrumb'-%}
  <div class="error_html_clone bg-danger"></div>
  <div class="success_from bg-success hide" id="ResetSuccess">
    <span style="padding: 7px 10px;display: inline-block;">{{ 'customer.recover_password.success' | t }}</span>
  </div>
  {%if settings.layout_style == "1" %}
  <div class="row margin-top-50 margin-bottom-70">
    <div class="page type-page status-publish hentry">
      <div class="entry-content static-content">
        <div class="woocommerce">
          <div class="col2-set">
            <div class="col-lg-6 col-md-6 col-sm-12" id="CustomerLoginForm">
              <h2>{{ 'customer.login.title' | t }}</h2>
              {% form 'customer_login' %}
              {% capture error_html_1 %}{{ form.errors | default_errors }}{% endcapture %}
              <p class="form-row form-row-wide">
                <label for="CustomerEmail">{{ 'customer.login.email' | t }} <span class="required">*</span></label>
                <input type="email" class="input-text" name="customer[email]" id="CustomerEmail" value="" class="{% if form.errors contains 'email' %}input--error{% endif %}" title="{{ 'customer.login.email' | t }}"  autocorrect="off" autocapitalize="off" autofocus required="required"> 
              </p>
              {% if form.password_needed %}
              <p class="form-row form-row-wide">
                <label for="password">{{ 'customer.login.password' | t }} <span class="required">*</span></label>
                <input type="password" name="customer[password]" class="input-text{% if form.errors contains 'password' %} input--error{% endif %}" id="CustomerPassword" title="{{ 'customer.login.password' | t }}" required="required">
              </p>
              {% endif %}
              <!-- <p class="required">* {{ 'layout.customer.required' | t }}</p> -->
              <p class="form-row" style="padding: 0 0 10px">
                <input type="submit" class="button" name="{{ 'customer.login.sign_in' | t }}" value="{{ 'customer.login.sign_in' | t }}">
              </p>
              {% if form.password_needed %}
              <p class="lost_password">
                <a href="#recover" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a>
              </p>
              {% endif %}
              {% endform %}
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 hide" id="RecoverPasswordForm">
              <h2>{{ 'customer.recover_password.title' | t }}</h2>
              {% form 'recover_customer_password' %}
              {% capture error_html_2 %}{{ form.errors | default_errors }}{% endcapture %}
              {% if form.posted_successfully? %}
              <span class="hide reset-password-success"></span>
              {% endif %}
              <p class="form-row form-row-wide">
                <label  for="RecoverEmail" class="required">{{ 'customer.recover_password.email' | t }}<sup>*</sup></label>
                <input type="email" name="email" value="" id="RecoverEmail" class="input-text{% if form.errors contains 'email' %} input--error{% endif %}" title="{{ 'customer.recover_password.email' | t }}"  autocorrect="off" autocapitalize="off" autofocus required="required">
              </p>
              <p class="form-row" style="padding: 0 0 10px">
                <button type="submit" class="button" title="Login" name="send"><span><span>{{ 'customer.recover_password.submit' | t }}</span></span></button>
                <a type="button" id="HideRecoverPasswordLink" class="text-link">{{ 'customer.recover_password.cancel' | t }}</a>
              </p>
              {% endform %}
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
              <h2>{{ 'customer.register.title' | t }}</h2>
              {% form 'create_customer' %}
              {% capture error_html_3 %}{{ form.errors | default_errors }}{% endcapture %}
              <p class="form-row form-row-wide">
                <label for="Email">{{ 'customer.register.email' | t }} <span class="required">*</span></label>
                <input type="email" name="customer[email]" id="Email" {% if form.email %} value="{{ form.email }}"{% endif %} title="{{ 'customer.register.email' | t }}" class="input-text{% if form.errors contains 'email' %} input--error{% endif %}" required="required">
              </p>
              <p class="form-row form-row-wide">
                <label for="CreatePassword">{{ 'customer.register.password' | t }} <span class="required">*</span></label>
                <input type="password" name="customer[password]" title="{{ 'customer.register.password' | t }}" id="CreatePassword" class="input-text{% if form.errors contains 'password' %} input--error{% endif %}" required="required">
              </p>
              <p class="form-row" style="padding: 0 0 10px">
                <input type="submit" class="button" name="{{ 'customer.register.submit' | t }}" value="{{ 'customer.register.submit' | t }}">
              </p>
              {% endform %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% elsif settings.layout_style == "2" %}
  <div class="col-wrapper entry-content static-content margin-bottom-70">
    <div class="col-main clearfix">
      <div class="account-login" id="CustomerLoginForm">
        <div class="page-title">
          <h2>{{ 'customer.login.title' | t }}</h2>
        </div>
        {% form 'customer_login' %}
        <div class="col2-set">
          <div class="registered-users">
            <div class="content">
              {% capture error_html_1 %}{{ form.errors | default_errors }}{% endcapture %}
              <ul class="form-list">
                <li>
                  <label for="CustomerEmail" class="required">{{ 'customer.login.email' | t }}<sup>*</sup>
                  </label>
                  <div class="input-box">
                    <input type="email" name="customer[email]" value="" id="CustomerEmail" class="input-text form-control required-entry validate-email{% if form.errors contains 'email' %} input--error{% endif %}" title="{{ 'customer.login.email' | t }}"  autocorrect="off" autocapitalize="off" required="required">
                  </div>
                </li>
                <li>
                  {% if form.password_needed %}
                  <label for="CustomerPassword" class="required">{{ 'customer.login.password' | t }}<sup>*</sup>
                  </label>
                  <div class="input-box">
                    <input type="password" name="customer[password]" class="input-text form-control required-entry validate-password{% if form.errors contains 'password' %} input--error{% endif %}" id="CustomerPassword" title="{{ 'customer.login.password' | t }}" required="required">
                  </div>
                  {% endif %}
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col2-set">
          <div class="registered-users">
            <div class="buttons-set">
              {% if form.password_needed %}
              <a href="#recover" class="f-left" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a>
              {% endif %}
              <button type="submit" class="button" title="Login" name="send"><span><span>{{ 'customer.login.sign_in' | t }}</span></span>
              </button>
            </div>
            <p class="required">* {{ 'layout.customer.required' | t }}</p>
          </div>
        </div>
        {% endform %}
      </div>
      <div class="account-login hide" id="RecoverPasswordForm">
        <div class="page-title">
          <h2>{{ 'customer.recover_password.title' | t }}</h2>
        </div>
        {% form 'recover_customer_password' %}
        <div class="col2-set">
          <p>{{ 'customer.recover_password.subtext' | t }}</p>
          <div class="registered-users">
            <div class="content">
              {% capture error_html_2 %}{{ form.errors | default_errors }}{% endcapture %}
              {% if form.posted_successfully? %}
              <span class="hide reset-password-success"></span>
              {% endif %}
              <ul class="form-list">
                <li>
                  <label  for="RecoverEmail" class="required">{{ 'customer.recover_password.email' | t }}<sup>*</sup>
                  </label>
                  <div class="input-box">
                    <input type="email" name="email" value="" id="RecoverEmail" class="input-text form-control required-entry validate-email{% if form.errors contains 'email' %} input--error{% endif %}" title="{{ 'customer.recover_password.email' | t }}"  autocorrect="off" autocapitalize="off" autofocus>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col2-set">
          <div class="registered-users">
            <div class="buttons-set">
              <button type="submit" class="button" title="Login" name="send"><span><span>{{ 'customer.recover_password.submit' | t }}</span></span>
              </button>
              <a type="button" id="HideRecoverPasswordLink" class="text-link" style="margin-top: 15px;">{{ 'customer.recover_password.cancel' | t }}</a>
            </div>
            <p class="required">* {{ 'layout.customer.required' | t }}</p>
          </div>
        </div>
        {% endform %}
      </div>

      {% if shop.checkout.guest_login %}
      <div class="text-center">
        <hr class="hr--invisible">
        <h2>{{ 'customer.login.guest_title' | t }}</h2>
        {% form 'guest_login' %}
        <input type="submit" class="btn" value="{{ 'customer.login.guest_continue' | t }}">
        {% endform %}
      </div>
      {% endif %}

      <div class="account-create" id="adfghafsh">
        <div class="page-title">
          <h2>{{ 'customer.register.title' | t }}</h2>
        </div>
        {% form 'create_customer' %}
        {% capture error_html_3 %}{{ form.errors | default_errors }}{% endcapture %}
        <div class="fieldset">
          <input type="hidden" name="success_url" value="">
          <input type="hidden" name="error_url" value="">
          <p class="legend">{{ 'customer.register.info' | t }}</p>
          <ul class="form-list">
            <li>
              <div class="full">
                <div class="data_area input-box">
                  <label class="required" for="FirstName">{{ 'customer.register.first_name' | t }}<sup>*</sup>
                  </label>
                  <input type="text" id="FirstName" name="customer[first_name]" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} title="{{ 'customer.register.first_name' | t }}" maxlength="255" class="input-text required-entry form-control" required="required">
                </div>
              </div>
            </li>
            <li>
              <div class="full">
                <div class="data_area input-box">
                  <label class="required" for="LastName">{{ 'customer.register.last_name' | t }}<sup>*</sup>
                  </label>
                  <input type="text" id="LastName" name="customer[last_name]" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} title="{{ 'customer.register.last_name' | t }}" maxlength="255" class="input-text required-entry form-control" required="required">
                </div>
              </div>
            </li>
            <li>
              <label for="Email" class="required">{{ 'customer.register.email' | t }}<sup>*</sup>
              </label>
              <div class="input-box">
                <input type="email" name="customer[email]" id="Email" {% if form.email %} value="{{ form.email }}"{% endif %} title="{{ 'customer.register.email' | t }}" class="input-text form-control validate-email required-entry{% if form.errors contains 'email' %} input--error{% endif %}" required="required">
              </div>
            </li>
            <li>
              <label for="CreatePassword" class="required">{{ 'customer.register.password' | t }}<sup>*</sup>
              </label>
              <div class="input-box">
                <input type="password" name="customer[password]" title="{{ 'customer.register.password' | t }}" id="CreatePassword" class="input-text form-control required-entry validate-cpassword{% if form.errors contains 'password' %} input--error{% endif %}" required="required">
              </div>
            </li>
          </ul>
        </div>
        <div class="buttons-set">
          <p class="required">* {{ 'layout.customer.required' | t }}</p>
          <button type="submit" title="Submit" class="button"><span><span>{{ 'customer.register.submit' | t }}</span></span>
          </button>
        </div>
        {% endform %}
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <div class="col-right sidebar">
    <ul>
      {{settings.account_text}}
    </ul>
  </div>
  {% endif %}
  <div id="error_html" class="hidden">
    {{error_html_1}}
    {%- if error_html_2 != error_html_1 -%}{{error_html_2}}{%- endif -%}
    {%- if error_html_3 != error_html_1 and error_html_3 != error_html_2 -%}{{error_html_3}}{%- endif -%}
  </div>
</div>