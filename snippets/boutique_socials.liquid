{%- unless social_grid -%}
{%- assign social_grid = '' -%}
{%- endunless -%}
{%-if settings.social_twitter_link != blank
      or settings.social_facebook_link != blank
      or settings.social_pinterest_link != blank
      or settings.social_instagram_link != blank
      or settings.social_tumblr_link != blank
      or settings.social_snapchat_link != blank
      or settings.social_youtube_link != blank
      or settings.social_vimeo_link != blank
      or settings.social_vk_link != blank
-%}
{%- assign social_icons = true -%}
{%-endif-%}
{%-if social_icons-%}
<div class="socials_ {{social_grid}}">
  <ul class="socials">
    {%-if settings.social_facebook_link != blank-%}
    <li>
      <a class="social-icons__link" target="_blank" href="{{ settings.social_facebook_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}">
        <i class="fab fa-facebook-f"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_twitter_link != blank-%}
    <li>
      <a class="social-icons__link" target="_blank" href="{{ settings.social_twitter_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}">
        <i class="fab fa-twitter"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_googleplus_link != blank-%}
    <li>
      <a class="social-icons__link" target="_blank" href="{{ settings.social_googleplus_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Google plus' }}">
        <i class="fab fa-google-plus-g"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_pinterest_link != blank-%}
    <li>
      <a class="social-icons__link" target="_blank" href="{{ settings.social_pinterest_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Pinterest' }}">
        <i class="fab fa-pinterest-p"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_instagram_link != blank-%}
    <li>
      <a class="social-icons__link" target="_blank" href="{{ settings.social_instagram_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}">
        <i class="fab fa-instagram"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_vk_link != blank-%}
    <li>
      <a class="social-icons__link" href="{{ settings.social_vk_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'VK' }}">
        <i class="fab fa-vk"></i>
      </a>
    </li>    
    {%-endif-%}
    {%-if settings.social_tumblr_link != blank-%}
    <li>
      <a class="social-icons__link" href="{{ settings.social_tumblr_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Tumblr' }}">
        <i class="fab fa-tumblr"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_snapchat_link != blank-%}
    <li>
      <a class="social-icons__link" href="{{ settings.social_snapchat_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Snapchat' }}">
        <i class="fab fa-snapchat-ghost"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_youtube_link != blank-%}
    <li>
      <a class="social-icons__link" href="{{ settings.social_youtube_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Youtube' }}">
        <i class="fab fa-youtube"></i>
      </a>
    </li>
    {%-endif-%}
    {%-if settings.social_vimeo_link != blank-%}
    <li>
      <a class="social-icons__link" href="{{ settings.social_vimeo_link | escape }}" target="_blank" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Vimeo' }}">
        <i class="fab fa-vimeo-v"></i>
      </a>
    </li>
    {%-endif-%}
  </ul>
</div>
{%-endif-%}