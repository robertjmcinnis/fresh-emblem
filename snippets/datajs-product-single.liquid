{%- unless section.id -%}
{%- unless section_id -%}
      {% assign section-id = product.id %}
{%- else -%}
      {% assign section-id = section_id %}
{%- endunless -%}
{%- else -%}
      {% assign section-id = section.id %}
{%- endunless -%}
<div class="datajs--{{ section-id }}"
      data-prImgs="{{product.images|join: ','|default: 'placeholder.png'}}"
      data-prImgsWidth="{{product.images| map:'width'|join: ',' | default: '300'}}"
      data-prImgsHeight="{{product.images| map:'height'|join: ',' | default: '300'}}"
      data-imgUrl="{{imgUrl}}"
      data-imgspos='{{imgsPos|join:','}}'
      data-imgspos360='{{pos360|join:','}}'
      data-vrimgpos={% if vrimgpos %}{{vrimgpos}}{% else %}{{imgsPos0}}{% endif %}
      data-curpos="[{{imgsPos0}},{{imgsPos1}}]" 
      data-vrs-featured-img='{{vrsFeaturedImage}}'
      {% if product.metafields.meta.video -%}
      {%- assign vrsVideo = '1:' | append: product.metafields.meta.video -%}
      data-vrsvideo="{{vrsVideo }}"
      {% else -%}
      data-vrsvideo="{{vrsVideo | join: ','}}"
      {%- endif %}></div>
{% if section_id == 'quickview-template' %}
<div class="datasettings--{{ section-id }}"
      data-layout-section="1"
      data-width-section=true
      data-product-layout={{settings.qv_product_layout|json}}
      data-image-size={{settings.qv_image_size|json}}
      data-use-thumb={{settings.qv_use_thumb|json}}
      data-use-thumb-vertical={{settings.qv_use_thumb_vertical|json}}
      data-gallery={{settings.gallery|json}}
      data-use-inventory-management={{settings.use_inventory_management|json}}
      data-trust-image-prdsingle={{settings.trust_image_prdsingle|json}}
      data-swatch-style={{settings.swatch_style|json}}></div>
{% else %}
<div class="datasettings--{{ section-id }}"
      data-layout-section={{section.settings.layout|default: '1'|json}}
      data-width-section={{section.settings.width_section|default: true|json}}
      data-product-layout={{settings.product_layout|json}}
      data-image-size={{settings.image_size|json}}
      data-use-thumb={{settings.use_thumb|json}}
      data-use-thumb-vertical={{settings.use_thumb_vertical|json}}
      data-gallery={{settings.gallery|json}}
      data-use-inventory-management={{settings.use_inventory_management|json}}
      data-trust-image-prdsingle={{settings.trust_image_prdsingle|json}}
      data-swatch-style={{settings.swatch_style|json}}></div>
{% endif %}