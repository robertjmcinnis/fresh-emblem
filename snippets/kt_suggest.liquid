    //       clearInterval(intervalID);
    //       check_mouse = false;
    //    }
    //   },
    //   mouseleave: function () {
    //     intervalID = setInterval(advanceNewsItem, delay_time + show_time);
    //     check_mouse = true;
    //   }
    // });
