{% if section.settings.product_recently_enable %}
<div class="widget_recent_productSg" style="display:none;float:left;width:100%;{%-if section.settings.section_bg != blank -%}background-color:{{section.settings.section_bg}};{%-endif-%}{%- if section.settings.section_padding != blank -%}padding: {{section.settings.section_padding | replace : '-',' '}};{%- endif -%}">
  <div class="{%- if section.settings.width_section -%} container{%- else -%} container-fluid{%- endif -%}" data-section-id="{{ section.id }}" id="Carousel-{{ section.id }}">
    <div class="clearfix" style="{%- if section.settings.section_margin_top != blank -%}margin-top: {{section.settings.section_margin_top}};{%- endif -%}
                {%- if section.settings.section_margin_bottom != blank -%}margin-bottom: {{section.settings.section_margin_bottom}};{%- endif -%}">
      <div class="row">      	
		<div class="upsell-products col-lg-12">
		    <div class="section-title text-center">
		      <h3>
		        {{section.settings.product_recently_title | default: "Recently viewed Product" }}
		      </h3>
		    </div>
		    <ul class="owl-carousel{%unless section.settings.product_grid_layout == ''%} style{{section.settings.product_grid_layout}}{% endunless %}" data-responsive='{"0":{"items":1},"375":{"items":2},"600":{"items":3},"1000":{"items":4}}' data-autoplay="false" data-loop="false" data-items="4" data-dots="false" data-nav="false" data-margin="30"></ul>
		</div>
      </div>
    </div>
  </div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Recently viewed Products",
    "settings": [
      {
        "type": "header",
        "content": "== Recently viewed Products"
      },
      {
        "type":"checkbox",
        "id": "width_section",
        "label": "Max width section",
        "default": true,
        "info": "Max width = 1200px"
      },
      {
        "type": "text",
        "id": "section_margin_top",
        "label": "Margin top",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_margin_bottom",
        "label": "Margin bottom",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_padding",
        "label": "Paddings Integer px ( top-right-bottom-left )",
        "info": "60px-60px-0-60px"
      },
      {
        "type": "color",
        "id": "section_bg",
        "label": "Background color"
      },
      {
        "type": "text",
        "id": "product_recently_title",
        "label": "Title section",
        "default": "Recently viewed"
      },
      {
        "type": "checkbox",
        "id": "product_recently_enable",
        "label": "Enable Recently viewed products"
      },
      {
        "type": "text",
        "id": "product_display",
        "label": "Limit product display",
        "default": "4"
      },
      {
        "type": "select",
        "id": "product_grid_layout",
        "label": "Product card grid layout",
        "options": [
          {
            "value": "",
            "label": "Default (By general settings)"
          },
          {
            "label": "Layout 1",
            "value": "1"
          },
          {
            "label": "Layout 2",
            "value": "2"
          },
          {
            "label": "Layout 3",
            "value": "3"
          },
          {
            "label": "Layout 4",
            "value": "4"
          },
          {
            "label": "Layout 4.1",
            "value": "4_1 style4"
          },
          {
            "label": "Layout 5",
            "value": "5"
          },
          {
            "label": "Layout 7",
            "value": "7"
          },
          {
            "label": "Layout 8",
            "value": "8"
          },
          {
            "label": "Layout 8.1",
            "value": "8_1 style8"
          },
          {
            "label": "Layout 9",
            "value": "9"
          }
        ],
        "default": ""
      }
    ]
  }
{% endschema %}