<div class="section-testimonials" style="background-image: url('{{section.settings.image|img_url: 'master'}}')">
  <div data-section-id="{{ section.id }}" id="Carousel-{{ section.id }}" data-section-type="carousel-section">
    <div class="container">
      <div class="clearfix" style="{%- if section.settings.section_margin_top != blank -%}margin-top: {{section.settings.section_margin_top}};{%- endif -%}
                                   {%- if section.settings.section_margin_bottom != blank -%}margin-bottom: {{section.settings.section_margin_bottom}};{%- endif -%}
                                   {%- if section.settings.section_padding != blank -%}padding: {{section.settings.section_padding | replace : '-',' '}};{%- endif -%}">
        <div class="section-title text-center style7">
          <span class="sub-title">{{section.settings.titlex }}</span>
          <h3>{{section.settings.text }}</h3>
        </div>
        {% if section.blocks.size != 0-%}
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <div class="testimonials owl-carousel nav-center-center nav-style7" data-autoplay="true" data-loop="true" data-nav="false" data-dots="true" data-margin="30" data-responsive='{"0":{"items":1},"600":{"items":1},"1000":{"items":1}}'>
              {% for block in section.blocks-%}
              <div class="testimonial" {{ block.shopify_attributes }}>
                <div class="text">{{block.settings.text_content}}</div>
                <h3 class="name">{{block.settings.name}}</h3>
                <span class="position">{{block.settings.position}}</span>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Section testimonials",
    "settings": [
      {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Section testimonials",
          "info": "Customize name section (no display item preview)"
      },
      {
        "type": "header",
        "content": "== Content settings"
      },
      {
        "type": "text",
        "id": "section_margin_top",
        "label": "Margin top",
        "info": "60px",
        "default": "80px"
      },
      {
        "type": "text",
        "id": "section_margin_bottom",
        "label": "Margin bottom",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_padding",
        "label": "Paddings Integer px ( top-right-bottom-left )",
        "info": "60px-60px-0-60px"
      },
      {
        "type": "text",
        "id": "titlex",
        "label": "Title",
        "default": "WHAT OUR CILENTS SAY"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Testimonials!"
      },
      {
         "type": "image_picker",
         "id": "image",
         "label": "Image background"
      }
    ],
	"blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
             "type": "textarea",
             "id": "text_content",
             "label": "Text content"
          },
          {
             "type": "text",
             "id": "name",
             "label": "Name",
             "default": "John Doe"
          },
          {
             "type": "text",
             "id": "position",
             "label": "Position",
             "default": "CEO/Founder Boutique"
          }
        ]
      }
    ]
  }
{% endschema %}